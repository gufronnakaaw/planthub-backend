// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Banner {
  id              String      @id @unique 
  alt             String      @db.VarChar(255)
  url             String      @db.VarChar(255)
  created_at      DateTime    @default(now())
  
  @@map("banners")
}

enum Provider {
  credential
  google
}

model User {
  id              String      @id @default(uuid())
  name            String      @db.VarChar(255)
  email           String      @db.VarChar(255)
  email_verified  Boolean     @default(false)
  picture         String      @db.VarChar(255)  @default("https://res.cloudinary.com/dgtuasua8/image/upload/v1710513433/users/default.png")
  given_name      String?     @db.VarChar(255)
  phone_number    String?     @db.VarChar(255)
  password        String?     @db.VarChar(255)
  provider        Provider
  created_at      DateTime    @default(now())
  updated_at      DateTime    @updatedAt
  address         Address[]

  @@map("users")
}

model Address {
  id              String      @id @default(uuid())
  user_id         String
  receiver        String      @db.VarChar(255)
  phone_number    String      @db.VarChar(255)
  province        String      @db.VarChar(255)
  regencies       String      @db.VarChar(255)
  district        String      @db.VarChar(255)
  village         String      @db.VarChar(255)
  detail          String      @db.Text
  active          Boolean     @default(false)
  created_at      DateTime    @default(now())
  updated_at      DateTime    @updatedAt

  user            User        @relation(fields: [user_id], references: [id], onDelete: Cascade, onUpdate: NoAction)

  @@map("addresses")
}

model Category {
  id              String      @id @default(uuid())
  created_at      DateTime    @default(now())
  updated_at      DateTime    @updatedAt

  @@map("categories")
}

model Bank {
  id              String      @id @default(uuid())
  name            String      @db.VarChar(255)
  created_at      DateTime    @default(now())
  updated_at      DateTime    @updatedAt

  @@map("banks")
}

model Logistic {
  id              String      @id @default(uuid())
  name            String      @db.VarChar(255)
  base_price      Int         @db.Integer
  created_at      DateTime    @default(now())
  updated_at      DateTime    @updatedAt

  @@map("logistics")
}